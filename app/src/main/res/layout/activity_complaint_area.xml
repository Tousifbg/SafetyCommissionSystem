<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Complaint"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp"
                android:background="@drawable/rect_shape"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginHorizontal="27dp"
                android:layout_marginBottom="@dimen/_14sdp">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/district_id"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="none"
                    android:padding="12dp"
                    android:clickable="true"
                    android:layout_marginLeft="16dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:background="@null"
                    android:textColorHint="@color/mytextcolor"
                    android:hint="Select District"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp"
                android:background="@drawable/rect_shape"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="27dp"
                android:layout_marginBottom="@dimen/_14sdp">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/category_id"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:textSize="@dimen/_12sdp"
                    android:padding="12dp"
                    android:clickable="true"
                    android:layout_marginLeft="16dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:background="@null"
                    android:textColorHint="@color/mytextcolor"
                    android:hint="Select Category"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp"
                android:background="@drawable/rect_shape"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="27dp"
                android:layout_marginBottom="@dimen/_14sdp">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/complaint_council"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textSize="@dimen/_12sdp"
                    android:clickable="true"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:textColorHint="@color/mytextcolor"
                    android:hint="Complaint Council"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:background="@drawable/rect_shape"
                android:layout_marginHorizontal="27dp"
                android:layout_marginBottom="@dimen/_14sdp">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/complaint_detail"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:padding="12dp"
                    android:textSize="@dimen/_12sdp"
                    android:clickable="true"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:textColorHint="@color/mytextcolor"
                    android:hint="Write down your complaint..."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attachments"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:weightSum="4"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/rect_shape2">

                        <ImageView
                            android:id="@+id/image_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/image_fil"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/rect_shape2">

                        <ImageView
                            android:id="@+id/videos_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/multimedia_player"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/rect_shape2">

                        <ImageView
                            android:id="@+id/doc_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/doc_fil"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/rect_shape2">

                        <ImageView
                            android:id="@+id/audios_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/audio_file"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_tick"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:weightSum="4"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="7dp">

                        <ImageView
                            android:id="@+id/image_tick"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:visibility="invisible"
                            android:src="@drawable/basic_tick"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="7dp"
                        >

                        <ImageView
                            android:id="@+id/videos_tick"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:visibility="invisible"
                            android:src="@drawable/basic_tick"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="7dp">

                        <ImageView
                            android:id="@+id/doc_tick"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:visibility="invisible"
                            android:src="@drawable/basic_tick"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="7dp">

                        <ImageView
                            android:id="@+id/audios_tick"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:visibility="invisible"
                            android:src="@drawable/basic_tick"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitComplaint"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:text="SUBMIT"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/round_border_edittext"
                android:textColor="@color/black" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>