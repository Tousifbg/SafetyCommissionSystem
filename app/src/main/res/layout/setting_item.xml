<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:qwerjk="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are You Sure!"
        android:textAlignment="center"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancelAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel Action"
            android:textAlignment="center"
            android:textSize="@dimen/_13sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:textColor="@color/newgreen"
            android:background="@drawable/cancel_shape"
            android:paddingVertical="@dimen/_12sdp" />

        <TextView
            android:id="@+id/btnLogoutNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logout Now"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/_7sdp"
            android:textColor="#ff5252"
            android:textSize="@dimen/_13sdp"
            android:background="@drawable/logout_shape"
            android:paddingVertical="@dimen/_12sdp" />

    </LinearLayout>


</LinearLayout>