<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/teal_200"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/buttonLogout"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_logout_icn" />

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:src="@drawable/profile_icn" />

                </RelativeLayout>



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/new_logo"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="Public Safety Commission,KP"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

                <LinearLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/complaintregister"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:outlineAmbientShadowColor="@color/green"
                        android:padding="@dimen/_40sdp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/offwhite"
                        android:outlineSpotShadowColor="@color/green"
                        app:cardCornerRadius="@dimen/_14sdp">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:src="@drawable/register" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:text="Register Complaint"
                            android:textSize="@dimen/_10sdp" />


                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewcomplaints"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:outlineAmbientShadowColor="@color/mycolorrrr"
                        android:padding="@dimen/_40sdp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/offwhite"
                        android:outlineSpotShadowColor="@color/green"
                        app:cardCornerRadius="@dimen/_14sdp">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:src="@drawable/preview" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:text="View Complaints"
                            android:textSize="@dimen/_10sdp" />


                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:outlineAmbientShadowColor="@color/mycolorrrr"
                        android:padding="@dimen/_40sdp"
                        app:cardBackgroundColor="@color/offwhite"
                        android:outlineProvider="background"
                        app:cardElevation="4dp"
                        android:outlineSpotShadowColor="@color/green"
                        app:cardCornerRadius="@dimen/_14sdp">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:src="@drawable/help" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:text="Help"
                            android:textSize="@dimen/_10sdp" />


                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        app:cardBackgroundColor="@color/offwhite"
                        android:outlineAmbientShadowColor="@color/mycolorrrr"
                        android:padding="@dimen/_40sdp"
                        app:cardElevation="4dp"
                        android:outlineSpotShadowColor="@color/green"
                        app:cardCornerRadius="@dimen/_14sdp">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:src="@drawable/aboutus" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="center"
                            android:text="About us"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />


                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>